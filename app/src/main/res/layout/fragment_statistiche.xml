<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo">


    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="367dp"
        android:layout_height="540dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688">

        <TableRow android:id="@+id/riga1">

            <TextView
                android:id="@+id/stringa_ogg_rilevati2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:text="@string/ogg_rilevati"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/stringa_ogg_raccolti2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="spread_inside" />
        </TableRow>

        <TableRow android:id="@+id/riga2">

            <TextView
                android:id="@+id/stringa_ogg_raccolti2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:text="@string/ogg_raccolti"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stringa_ogg_rilevati2" />
        </TableRow>

        <TableRow
            android:id="@+id/riga3"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/quadratino_rosso"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="240dp"
                    android:background="@drawable/quadrato_rosso"
                    tools:visibility="visible"
                    android:layout_column="0"
                    />


            <TextView
                android:id="@+id/stringa_rossi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:fontFamily="sans-serif"
                android:text="@string/col_rosso"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </TableRow>


    </TableLayout>



</android.support.constraint.ConstraintLayout>